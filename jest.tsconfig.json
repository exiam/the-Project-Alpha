{
  "compilerOptions": {
    "sourceMap": false,
    "experimentalDecorators": true,
    "noImplicitUseStrict": true,
    "removeComments": true,
    "moduleResolution": "node",
    "lib": ["es2017", "dom"],
    "typeRoots": ["node_modules/@types"],
    "target": "esnext",
    "module": "esnext",
    "jsx": "preserve",
    "allowJs": true,
    "isolatedModules": false
  },
  "exclude": ["node_modules", "out", ".next"],
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"]
}
